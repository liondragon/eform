# Root EditorConfig for the repo
root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

# Markdown: prefer tabs for lists; no hard wrap limit
[*.md]
indent_style = tab
indent_size = tab
max_line_length = off

# Code examples in PHP (not required, but handy)
[*.php]
indent_style = tab
indent_size = 4

# YAML (generators & config) â€” spaces to avoid YAML tab pitfalls
[*.yml]
indent_style = space
indent_size = 2
