{
  "id": "rules_demo",
  "version": "1",
  "title": "Rules Demo",
  "success": {
    "mode": "inline",
    "message": "Thanks!"
  },
  "email": {
    "to": "test@example.com",
    "subject": "Rules Demo",
    "email_template": "default",
    "include_fields": [
      "user_email",
      "confirm_email_checkbox"
    ]
  },
  "fields": [
    {
      "key": "user_email",
      "type": "email",
      "label": "Your Email"
    },
    {
      "key": "confirm_email_checkbox",
      "type": "checkbox",
      "label": "Confirm Email",
      "options": [
        {
          "key": "yes",
          "label": "Yes"
        }
      ]
    }
  ],
  "rules": [
    {
      "rule": "required_if",
      "target": "confirm_email_checkbox",
      "field": "user_email",
      "equals": "yes"
    }
  ],
  "submit_button_text": "Send"
}
