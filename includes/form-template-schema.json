{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "fields": {
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z0-9_-]+$": {
          "type": "object",
          "properties": {
            "type": { "type": "string" },
            "placeholder": { "type": "string" },
            "required": { "type": ["boolean", "string"] },
            "autocomplete": { "type": "string" },
            "aria-label": { "type": "string" },
            "aria-required": { "type": "string" },
            "style": { "type": "string" },
            "cols": { "type": ["string", "integer"] },
            "rows": { "type": ["string", "integer"] }
          },
          "required": ["type"],
          "additionalProperties": true
        }
      }
    }
  },
  "additionalProperties": true
}

